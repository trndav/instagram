<p style="color: green"><%= notice %></p>

<%= render @post %>

<% if user_signed_in? %>
  <% if current_user.id == @post.user.id %>
    <div class="col-xl-4 col-md-6 col-sm-8 col-10" style="margin: auto;" >
      <div class="btn-group" style="margin-bottom: 10px; margin-top: 10px;">
        <%= button_to "Edit post", edit_post_path(@post), style:"margin-right: 10px;" %>
        <%= button_to "Delete post", post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
      </div>
    </div>
  <% end %>
<% end %>

<div class="col-xl-4 col-md-6 col-sm-8 col-10" style="margin: auto; background-color: #f8f8f8; border-radius: 10px; padding: 5px; margin-top: 20px;">
  <% @post.comments.each do |comment| %>
    <p><%= comment.text %> </p>
  <% end %>
  <%= render "comments/form", comment: @comment %>  
</div>
